{
  "permissions": {
    "allow": [
      "Bash(npm run typecheck:*)",
      "Bash(npm run format:*)",
      "Bash(.specify/scripts/bash/check-prerequisites.sh:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Save File",
        "hooks": [
          {
            "type": "command",
            "command": "npm run format"
          },
          {
            "type": "command",
            "command": "npm run lint"
          },
          {
            "type": "command",
            "command": "npm run typecheck"
          }
        ]
      }
    ]
  }
}
